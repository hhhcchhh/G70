<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view0"
        android:layout_width="4dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="6dp"
        android:background="@color/main_color"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView19"
        style="@style/TextLeftStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="10dp"
        android:text="@string/open_list"
        app:layout_constraintStart_toEndOf="@+id/view0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cell_tip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_open"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/view0"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/view0" />

    <TextView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:background="@drawable/btn_bg_ok"
        android:textColor="@color/white"
        android:text="@string/add"
        app:layout_constraintStart_toEndOf="@+id/tv_cell_tip_1"
        app:layout_constraintBottom_toBottomOf="@id/view0"
        app:layout_constraintTop_toTopOf="@+id/view0" />

    <TextView
        android:id="@+id/iv_black_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:background="@drawable/btn_bg_ok"
        android:textColor="@color/white"
        android:text="@string/black_white_list"
        app:layout_constraintStart_toEndOf="@+id/iv_add"
        app:layout_constraintBottom_toBottomOf="@id/view0"
        app:layout_constraintTop_toTopOf="@+id/view0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

</androidx.constraintlayout.widget.ConstraintLayout>