<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/under_line"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@mipmap/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/black_white_list"
            android:textColor="@color/color_1a1a1a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@mipmap/add"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_import"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_import"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@mipmap/import1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_left_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/do_left_tip"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/color_b6b6b6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/black_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:drawSelectorOnTop="false"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp" />
</LinearLayout>