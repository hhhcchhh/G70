<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#C1EBF4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/title_bar"
            android:src="@mipmap/icon_temperature"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="00.00"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.simdo.dw_multiple.DrawBatteryView
            android:id="@+id/battery_view"
            android:layout_width="24dp"
            android:layout_height="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_temp" />

        <TextView
            android:id="@+id/battery"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/color_333333"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/battery_view"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_value_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/trace_value"
            app:layout_constraintTop_toBottomOf="@+id/battery"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_value_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/trace_value"
            app:layout_constraintTop_toBottomOf="@+id/battery"
            app:layout_constraintStart_toEndOf="@+id/tv_value_first"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/title_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_value_second"
            android:text="@string/cell_1"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/imsi_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/title_first"
            app:layout_constraintTop_toBottomOf="@+id/tv_value_second"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/arfcn_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imsi_first"
            app:layout_constraintTop_toBottomOf="@+id/tv_value_second"
            android:textSize="16sp"
            android:textColor="@color/main_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/pci_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/arfcn_first"
            app:layout_constraintTop_toBottomOf="@+id/tv_value_second"
            android:textSize="16sp"
            android:textColor="@color/main_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/title_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imsi_first"
            android:text="@string/cell_2"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/imsi_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/title_second"
            app:layout_constraintTop_toBottomOf="@+id/imsi_first"
            android:textSize="16sp"
            android:textColor="@color/main_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/arfcn_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imsi_second"
            app:layout_constraintTop_toBottomOf="@+id/imsi_first"
            android:textSize="16sp"
            android:textColor="@color/main_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/pci_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/arfcn_second"
            app:layout_constraintTop_toBottomOf="@+id/imsi_first"
            android:textSize="16sp"
            android:textColor="@color/main_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/btn_arfcn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background_main"
            app:layout_constraintTop_toBottomOf="@+id/btn_trace"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:text="@string/freq_scan"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Button
            android:id="@+id/btn_trace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_background_main"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@string/trace"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imsi_second"
            android:visibility="visible"
            android:weightSum="1">

            <TextView
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:text="@string/gps_state" />

            <TextView
                android:id="@+id/tv_gps"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="14sp"
                android:textColor="#FDCD4E"
                tools:text="同步" />

            <TextView
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:text="@string/air_state"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_air_sync"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="14sp"
                android:textColor="#FDCD4E"
                tools:text="同步" />

            <TextView
                android:id="@+id/tv_air_sync1"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="14sp"
                android:textColor="#FDCD4E"
                tools:text="同步" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/device_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_333333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sync" />
        <TextView
            android:id="@+id/device_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/sync" />

        <TextView
            android:id="@+id/tv_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tv_ip"
            android:textColor="@color/color_333333"
            app:layout_constraintStart_toEndOf="@+id/device_id"
            app:layout_constraintTop_toBottomOf="@+id/sync" />
        <TextView
            android:id="@+id/ip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            app:layout_constraintStart_toEndOf="@+id/tv_ip"
            app:layout_constraintTop_toBottomOf="@+id/sync" />


        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/state"
            android:textColor="@color/state_text_color"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/state_text_color"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_state"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
        <TextView
            android:id="@+id/catch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/state_text_color"
            android:textSize="14sp"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
        <TextView
            android:id="@+id/tv_catch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/state_text_color"
            android:textSize="14sp"
            android:text="帧码数量："
            app:layout_constraintEnd_toStartOf="@+id/catch_count"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/line_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/state" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="center"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:tabIndicatorColor="#3576EC"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="2dp"
            android:layout_gravity="center_horizontal"
            app:tabTextAppearance="@style/MyTabLayout"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/gray"
            android:orientation="horizontal">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/catch_list"
                android:id="@+id/tab_catch" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/bar_chart"
                android:id="@+id/bar_chart" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/freq_scan_list"
                android:id="@+id/freq_scan_list" />
        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:id="@+id/catch_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_loc_bar"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingTop="6dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="6dp"
                    android:text="@string/imsi"
                    android:textColor="@color/main_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/arfcn"
                    android:textColor="@color/main_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/pci"
                    android:textColor="@color/main_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/title_f_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="F-Time"
                    android:textColor="@color/main_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:text="L-Time"
                    android:textColor="@color/main_text_color"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imsi_list"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chart_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="#3576EC"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="2dp"
                app:tabTextAppearance="@style/MyTabLayout"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="@color/gray"
                android:orientation="horizontal">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/rb_cell_0"
                    android:id="@+id/tab_cell_0"
                    />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/rb_cell_1"
                    android:id="@+id/tab_cell_1"
                    />
            </com.google.android.material.tabs.TabLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart0"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:layout_height="match_parent"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart1"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/freq_scan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/list_arfcn_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/arfcn_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:descendantFocusability="blocksDescendants"
                android:drawSelectorOnTop="false" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>