<resources>
    <style name="style_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="BaseDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@animator/ani_neiber_in</item>
        <item name="android:windowExitAnimation">@animator/ani_neiber_out</item>
    </style>

    <!-- PointLineSelectorDialog -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <style name="style_alertdialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/bg_color</item>
    </style>

    <style name="CheckBox1Theme">
        <item name="colorAccent">#6a62b3</item><!--选中颜色-->
        <item name="colorControlNormal">#cccccc</item><!--未选中颜色-->
    </style>
    <style name="tabLayout_testStyle" parent="TextAppearance.Design.Tab">
        <!--此处可用dp也可以用sp都可以,任选一个-->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MyTabLayout">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyTabLayout1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="leftTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="rightTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tblack</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="rsrpTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">66sp</item>
        <item name="android:textColor">@color/rsrp_color</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/tab_layout_size</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="leftSettingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>
    <style name="rightSettingTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_818181</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:gravity">center|end</item>
    </style>


</resources>
