<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trace_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_black_cfg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_status_bar"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="配置频点/PCI"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_set_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:text="使用默认"
        android:textColor="@color/main_color"
        android:background="@drawable/btn_bg_cancel"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_auto_pci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="PCI自配置"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_auto_pci_tip"
        app:layout_constraintTop_toBottomOf="@+id/tv_black_cfg_title" />
    <TextView
        android:id="@+id/tv_auto_pci_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(pci根据周围环境自动调整)"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_auto_pci"
        app:layout_constraintTop_toTopOf="@+id/tv_auto_pci" />
    <Switch
        android:id="@+id/switch_auto_pci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="20dp"
        android:layout_marginStart="4dp"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track"
        android:checked="true"
        app:layout_constraintStart_toEndOf="@+id/tv_auto_pci_tip"
        app:layout_constraintBottom_toBottomOf="@+id/tv_auto_pci"
        app:layout_constraintTop_toTopOf="@+id/tv_auto_pci"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <ScrollView
        android:id="@+id/sv_cfg_trace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_btn"
        app:layout_constraintTop_toBottomOf="@+id/switch_auto_pci">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">

            <View
                android:id="@+id/view0"
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="6dp"
                android:background="@color/main_color"
                app:layout_constraintBottom_toBottomOf="@+id/textView19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView19"
                style="@style/TextLeftStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="10dp"
                android:text="通道一："
                app:layout_constraintStart_toEndOf="@+id/view0"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(/N28/N78/N79)"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/view0"
                app:layout_constraintStart_toEndOf="@+id/textView19"
                app:layout_constraintTop_toTopOf="@+id/view0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_arfcn_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_1"
                app:layout_constraintStart_toEndOf="@+id/view0"
                app:layout_constraintTop_toBottomOf="@+id/view0" />

            <ImageView
                android:id="@+id/btn_add_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="6dp"
                android:background="@mipmap/button_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/rv_arfcn_1" />

            <View
                android:id="@+id/view1"
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="6dp"
                android:background="@color/main_color"
                app:layout_constraintBottom_toBottomOf="@+id/textView22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView22" />

            <TextView
                android:id="@+id/textView22"
                style="@style/TextLeftStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="25dp"
                android:text="通道二："
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/rv_arfcn_1" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(/B34/B39/B40/B41)"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/view1"
                app:layout_constraintStart_toEndOf="@+id/textView22"
                app:layout_constraintTop_toTopOf="@+id/view1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_arfcn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_1"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

            <ImageView
                android:id="@+id/btn_add_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="6dp"
                android:background="@mipmap/button_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/rv_arfcn_2" />

            <View
                android:id="@+id/view2"
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="6dp"
                android:background="@color/main_color"
                app:layout_constraintBottom_toBottomOf="@+id/textView26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView26" />

            <TextView
                android:id="@+id/textView26"
                style="@style/TextLeftStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="25dp"
                android:text="通道三："
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/rv_arfcn_2" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(/N1/N41)"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/view2"
                app:layout_constraintStart_toEndOf="@+id/textView26"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_arfcn_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_1"
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/view2"/>

            <ImageView
                android:id="@+id/btn_add_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="6dp"
                android:background="@mipmap/button_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/rv_arfcn_3" />

            <View
                android:id="@+id/view3"
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="6dp"
                android:background="@color/main_color"
                app:layout_constraintBottom_toBottomOf="@+id/textView30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView30" />

            <TextView
                android:id="@+id/textView30"
                style="@style/TextLeftStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="25dp"
                android:text="通道四："
                app:layout_constraintStart_toEndOf="@+id/view3"
                app:layout_constraintTop_toBottomOf="@+id/rv_arfcn_3" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(/B1/B3/B5/B8)"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/view3"
                app:layout_constraintStart_toEndOf="@+id/textView30"
                app:layout_constraintTop_toTopOf="@+id/view3" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_arfcn_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_1"
                app:layout_constraintStart_toEndOf="@+id/view3"
                app:layout_constraintTop_toBottomOf="@+id/textView30" />

            <ImageView
                android:id="@+id/btn_add_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="6dp"
                android:background="@mipmap/button_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/rv_arfcn_4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_ok"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_cancel_2"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="返回"
            android:textColor="@color/color_1c1c1c"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>