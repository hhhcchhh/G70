<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/color_EDEDED"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:text="侦码定位"
            android:textColor="@color/color_1a1a1a"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_cell_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="10dp">
            <TextView
                android:id="@+id/tv_rsrp_nr_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="100"
                android:textColor="@color/main_color"
                android:textSize="40sp"
                android:layout_marginVertical="6dp"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tv_arfcn_pci_title_nr_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:text="频点/PCI"
                android:layout_marginVertical="6dp"
                style="@style/TextLeftStyle" />

            <TextView
                android:id="@+id/tv_arfcn_pci_nr_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_arfcn_pci_title_nr_1"
                android:text="504990/120"
                style="@style/TextRightStyle"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_imsi_title_nr_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_arfcn_pci_nr_1"
                android:layout_alignParentStart="true"
                android:text="IMSI"
                style="@style/TextLeftStyle"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/tv_imsi_nr_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_imsi_title_nr_1"
                android:text="46000****0000"
                style="@style/TextRightStyle"
                android:layout_marginBottom="4dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginStart="4dp"
            android:paddingStart="6dp">
            <TextView
                android:id="@+id/tv_rsrp_lte_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="100"
                android:textColor="@color/main_color"
                android:textSize="40sp"
                android:layout_marginVertical="6dp"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tv_arfcn_pci_title_lte_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:text="频点/PCI"
                style="@style/TextLeftStyle"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/tv_arfcn_pci_lte_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_arfcn_pci_title_lte_1"
                android:text="504990/120"
                style="@style/TextRightStyle"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_imsi_title_lte_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_arfcn_pci_lte_1"
                android:layout_alignParentStart="true"
                android:text="IMSI"
                style="@style/TextLeftStyle"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/tv_imsi_lte_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_imsi_title_lte_1"
                android:text="46000****0000"
                style="@style/TextRightStyle"
                android:layout_marginBottom="4dp"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cell_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tv_rsrp_nr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="100"
                android:textColor="@color/main_color"
                android:textSize="40sp"
                android:layout_marginVertical="6dp"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tv_arfcn_pci_title_nr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="频点/PCI"
                style="@style/TextLeftStyle"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/tv_arfcn_pci_nr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_arfcn_pci_title_nr_2"
                android:text="504990/120"
                style="@style/TextRightStyle"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_imsi_title_nr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_arfcn_pci_nr_2"
                android:layout_alignParentStart="true"
                android:text="IMSI"
                style="@style/TextLeftStyle"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/tv_imsi_nr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_imsi_title_nr_2"
                android:text="46000****0000"
                style="@style/TextRightStyle"
                android:layout_marginBottom="4dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginStart="4dp"
            android:paddingStart="6dp">
            <TextView
                android:id="@+id/tv_rsrp_lte_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="100"
                android:textColor="@color/main_color"
                android:textSize="40sp"
                android:layout_marginVertical="6dp"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tv_arfcn_pci_title_lte_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="频点/PCI"
                style="@style/TextLeftStyle"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/tv_arfcn_pci_lte_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_arfcn_pci_title_lte_2"
                android:text="504990/120"
                style="@style/TextRightStyle"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_imsi_title_lte_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_arfcn_pci_lte_2"
                android:layout_alignParentStart="true"
                android:text="IMSI"
                style="@style/TextLeftStyle"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/tv_imsi_lte_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_imsi_title_lte_2"
                android:text="46000****0000"
                style="@style/TextRightStyle"
                android:layout_marginBottom="4dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="2dp">

        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:background="@color/main_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="侦码列表"
            style="@style/TextRightStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="联通"
            style="@style/TextLeftStyle"
            app:drawableStartCompat="@mipmap/unicom_icon"
            android:drawablePadding="2dp" />
        <TextView
            android:id="@+id/tv_unicom_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="26"
            style="@style/TextRightStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="移动"
            style="@style/TextLeftStyle"
            app:drawableStartCompat="@mipmap/mobile_icon"
            android:drawablePadding="2dp"/>

        <TextView
            android:id="@+id/tv_mobile_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="26"
            style="@style/TextRightStyle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="电信"
            style="@style/TextLeftStyle"
            app:drawableStartCompat="@mipmap/telecom_icon"
            android:drawablePadding="2dp"/>
        <TextView
            android:id="@+id/tv_telecom_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="26"
            style="@style/TextRightStyle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="广电"
            style="@style/TextLeftStyle"
            app:drawableStartCompat="@mipmap/sva_icon"
            android:drawablePadding="2dp"/>
        <TextView
            android:id="@+id/tv_sva_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="26"
            style="@style/TextRightStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="运营商"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="时间"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:text="IMSI"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="频点/PCI"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_rsrp"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="场强"
            android:textSize="12sp"
            android:drawableEnd="@mipmap/sort_icon"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="次数"
            android:textSize="12sp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_imsi_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:background="@color/white"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:textSize="12sp"
            android:text="NR流程："/>
        <ProgressBar
            android:id="@+id/pb_nr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:max="100"
            android:progress="0"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_bar_bg"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_pb_nr"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/color_1c1c1c"/>
        <ImageView
            android:id="@+id/iv_anim_nr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/do_work_animation"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:textSize="12sp"
            android:text="LTE流程："/>
        <ProgressBar
            android:id="@+id/pb_lte"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_bg"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_pb_lte"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/color_1c1c1c"/>
        <ImageView
            android:id="@+id/iv_anim_lte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/do_work_animation"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_do_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="开启侦码"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg_ok"
            android:layout_marginStart="10dp"/>
        <LinearLayout
            android:id="@+id/ll_rx_gain"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="增益："
                style="@style/TextRightStyle"/>
            <RadioGroup
                android:id="@+id/rg_rx_gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_far"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:theme="@style/MainRadioButton"
                    android:text="标准" />

                <RadioButton
                    android:id="@+id/rb_near"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:theme="@style/MainRadioButton"
                    android:text="近距" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>