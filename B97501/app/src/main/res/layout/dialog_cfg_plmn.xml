<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_line"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/cfg_plmn"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"/>

    <com.simdo.g73cs.View.MyRadioGroup
        android:id="@+id/rb_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/use_def"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:theme="@style/MainRadioButton"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/use_def_tip"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/color_EDEDED" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/use_custom"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/MainRadioButton" />
            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/use_custom_tip"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.simdo.g73cs.View.MyRadioGroup>

    <View
        android:id="@+id/view0"
        android:layout_width="3dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rb_mode"
        android:background="@color/main_color" />

    <TextView
        android:id="@+id/tv_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/plmn_list"
        android:textColor="@color/color_1c1c1c"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/view0"
        app:layout_constraintTop_toTopOf="@id/view0"
        app:layout_constraintBottom_toBottomOf="@id/view0"
        android:layout_marginStart="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plmn_max_num_tip"
        app:layout_constraintStart_toEndOf="@+id/tv_list_title"
        app:layout_constraintTop_toTopOf="@id/view0"
        app:layout_constraintBottom_toBottomOf="@id/view0"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/btn_bg_ok"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view0"
        app:layout_constraintBottom_toBottomOf="@id/view0"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@color/color_f8f8f8"
        android:dividerHeight="1dip"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginBottom="1dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/view0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>