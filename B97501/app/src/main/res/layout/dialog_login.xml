<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:paddingVertical="100dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_connect_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接模式：网线"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.simdo.g73cs.View.ConnectProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_mode"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_connect_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接中..."
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/ed_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white_7D"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/user"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textSize="18sp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_state"/>

    <View
        android:id="@id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_16"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_login_name"/>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/view3">

        <EditText
            android:id="@+id/ed_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/password"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="18sp"
            android:textColorHint="@color/white_7D" />

        <ImageView
            android:id="@+id/iv_login_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ed_login_password"
            android:layout_alignBottom="@+id/ed_login_password"
            android:src="@mipmap/unsee"
            app:tint="@color/white" />
    </RelativeLayout>

    <View
        android:id="@id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_16"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@+id/rl1"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:background="@drawable/btn_bg_login"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="@color/main_color"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@+id/view4"/>

    <CheckBox
        android:id="@+id/cb_into_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:theme="@style/MainLoginCheckBoxTheme"
        android:text="离线模式"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login"/>

</androidx.constraintlayout.widget.ConstraintLayout>