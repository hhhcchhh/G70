<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/title_bar</item>
    </style>

    <style name="style_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="style_alertdialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/bg_color</item>
    </style>

    <style name="CheckBox1Theme">
        <item name="colorAccent">#6a62b3</item><!--选中颜色-->
        <item name="colorControlNormal">#cccccc</item><!--未选中颜色-->
    </style>
    <style name="tabLayout_testStyle" parent="TextAppearance.Design.Tab">
        <!--此处可用dp也可以用sp都可以,任选一个-->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MyTabLayout">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyTabLayout1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CheckBoxMainTheme">
        <item name="colorAccent">@color/title_bar</item><!--选中颜色-->
        <item name="colorControlNormal">@color/title_bar</item><!--未选中颜色-->
    </style>
</resources>
