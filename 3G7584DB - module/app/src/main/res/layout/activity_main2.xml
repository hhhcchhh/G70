                        android:gravity="center"
                        android:text="等待开机"
                        android:textColor="@color/left_text_color"
                        android:textSize="@dimen/left_text_size" />
                </LinearLayout>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_dw_device_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/corner5_ffffded7"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_device_channel">

                <TextView
                    android:id="@+id/device_tmp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="设备温度"
                    android:textColor="@color/left_title_color"

                    android:textSize="@dimen/left_title_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/device_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="0.0"
                    android:textColor="@color/left_text_color"
                    android:textSize="@dimen/left_title_size"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/device_tmp_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_dw_device_elec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner5_fffff5c0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/cl_dw_device_temp"
                app:layout_constraintTop_toBottomOf="@+id/ll_device_channel"
                android:visibility="gone">

                <TextView
                    android:id="@+id/cl_dw_device_elec_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="设备电量"
                    android:textColor="@color/left_title_color"

                    android:textSize="@dimen/left_title_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/device_voltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="0.0"
                    android:textColor="@color/left_text_color"
                    android:textSize="@dimen/left_title_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_dw_device_elec_title" />

                <TextView
                    android:id="@+id/device_voltage_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text=""
                    android:textColor="@color/yellow"
                    android:textSize="12sp"

                    app:layout_constraintBottom_toBottomOf="@+id/device_voltage"
                    app:layout_constraintStart_toEndOf="@+id/device_voltage"
                    app:layout_constraintTop_toTopOf="@+id/device_voltage" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_cx_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/cl_dw_device_temp">

                <TextView
                    android:id="@+id/tv_cx_title_device"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="设备"
                    android:textColor="@color/left_title_color"
                    android:textSize="@dimen/left_title_size" />

                <TextView
                    android:id="@+id/tv_cx_title_gps"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="GPS"
                    android:textColor="@color/left_title_color"
                    android:textSize="@dimen/left_title_size" />

                <TextView
                    android:id="@+id/tv_cx_title_air"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="空口"
                    android:textColor="@color/left_title_color"
                    android:textSize="@dimen/left_title_size" />

                <TextView
                    android:id="@+id/tv_cx_title_temp"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="温度"
                    android:textColor="@color/left_title_color"

                    android:textSize="@dimen/left_title_size" />

                <TextView
                    android:id="@+id/tv_cx_title_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="@color/left_title_color"

                    android:textSize="@dimen/left_title_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cx_device_info"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ll_cx_title">

                <TextView
                    android:id="@+id/tv_cx_text_device"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="测向"
                    android:textColor="@color/left_text_color"
                    android:textSize="@dimen/left_text_size" />

                <TextView
                    android:id="@+id/tv_cx_text_gps"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="失步"
                    android:textColor="@color/left_text_color"
                    android:textSize="@dimen/left_text_size" />

                <TextView
                    android:id="@+id/tv_cx_text_air"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:text="失步"
                    android:textColor="@color/left_text_color"
                    android:textSize="@dimen/left_text_size" />

                <TextView
                    android:id="@+id/tv_cx_text_temp"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="0°C"
                    android:textColor="@color/left_text_color"

                    android:textSize="@dimen/left_text_size" />

                <TextView
                    android:id="@+id/tv_cx_text_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:text="等待开机"
                    android:textColor="@color/left_text_color"

                    android:textSize="@dimen/left_text_size" />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_low_elec_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/ll_cx_device_info">

                <ImageView
                    android:id="@+id/iv_low_elec"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:background="@mipmap/icon_low_elec_warn" />
                <TextView
                    android:id="@+id/tv_low_elec_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="设备电量低"
                    android:textColor="#FFFF2300"
                    android:textSize="@dimen/left_title_size"
                    app:layout_constraintStart_toEndOf="@+id/iv_low_elec"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.drawerlayout.widget.DrawerLayout>