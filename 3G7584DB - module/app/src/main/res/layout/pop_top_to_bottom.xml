<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <View
            android:id="@+id/view1"
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:layout_margin="10dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@+id/tv_sync_state_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            style="@style/TextLeftStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="@string/sync_mode"
            app:layout_constraintBottom_toBottomOf="@+id/view1"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/view1" />

        <TextView
            android:id="@+id/tv_sync_state_1"
            style="@style/TextRightStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:text="@string/lose_sync"
            app:layout_constraintEnd_toStartOf="@+id/tv_sync_state_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/tv_sync_state_2"
            style="@style/TextRightStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:text="@string/lose_sync"
            app:layout_constraintEnd_toStartOf="@+id/tv_sync_state_3"
            app:layout_constraintStart_toEndOf="@+id/tv_sync_state_1"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/tv_sync_state_3"
            style="@style/TextRightStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:text="@string/lose_sync"
            app:layout_constraintEnd_toStartOf="@+id/tv_sync_state_4"
            app:layout_constraintStart_toEndOf="@+id/tv_sync_state_2"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/tv_sync_state_4"
            style="@style/TextRightStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:text="@string/lose_sync"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_sync_state_3"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <View
            android:id="@+id/view31"
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:layout_margin="10dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@+id/tv_sync_state_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_sync_state_4" />

        <TextView
            android:id="@+id/textView16"
            style="@style/TextLeftStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="@string/temp"
            app:layout_constraintBottom_toBottomOf="@+id/view31"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/view31" />

        <TextView
            android:id="@+id/tv_temp"
            style="@style/TextRightStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0℃"
            app:layout_constraintBottom_toBottomOf="@+id/textView16"
            app:layout_constraintEnd_toEndOf="@+id/tv_sync_state_2"
            app:layout_constraintStart_toStartOf="@+id/tv_sync_state_2"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

        <View
            android:id="@+id/view32"
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:layout_margin="10dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@+id/tv_sync_state_1"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView17"
            style="@style/TextLeftStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="@string/vol"
            app:layout_constraintBottom_toBottomOf="@+id/view32"
            app:layout_constraintStart_toEndOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/view32" />

        <TextView
            android:id="@+id/tv_vol"
            style="@style/TextRightStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0℃"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="@+id/tv_sync_state_2"
            app:layout_constraintStart_toStartOf="@+id/tv_sync_state_2"
            app:layout_constraintTop_toTopOf="@+id/textView17" />

        <View
            android:id="@+id/view33"
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:layout_margin="10dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@+id/tv_sync_state_1"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView18"
            style="@style/TextLeftStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="@string/state_time_line"
            app:layout_constraintBottom_toBottomOf="@+id/view33"
            app:layout_constraintStart_toEndOf="@+id/view33"
            app:layout_constraintTop_toTopOf="@+id/view33" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_steps"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view4"
            app:layout_constraintEnd_toStartOf="@+id/tv_sync_state_4"
            app:layout_constraintStart_toEndOf="@+id/tv_sync_state_1"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EDEDED"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_close_pop"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

</LinearLayout>