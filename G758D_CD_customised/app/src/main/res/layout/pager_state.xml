<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_color"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:text="@string/dev_state"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="4dp"
        android:layout_height="18dp"
        android:layout_margin="10dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        style="@style/TextLeftStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:text="@string/cell_state"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <ImageView
        android:id="@+id/iv_cell_1_nr"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_cell_2_nr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_cell_1_nr"
        style="@style/TextUnderImageStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintEnd_toEndOf="@+id/iv_cell_1_nr"
        app:layout_constraintStart_toStartOf="@+id/iv_cell_1_nr"
        app:layout_constraintTop_toBottomOf="@+id/iv_cell_1_nr" />

    <ImageView
        android:id="@+id/iv_cell_2_nr"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_cell_1_lte"
        app:layout_constraintStart_toEndOf="@+id/iv_cell_1_nr"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_cell_2_nr"
        style="@style/TextUnderImageStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintEnd_toEndOf="@+id/iv_cell_2_nr"
        app:layout_constraintStart_toStartOf="@+id/iv_cell_2_nr"
        app:layout_constraintTop_toBottomOf="@+id/iv_cell_2_nr" />

    <ImageView
        android:id="@+id/iv_cell_1_lte"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_cell_2_lte"
        app:layout_constraintStart_toEndOf="@+id/iv_cell_2_nr"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_cell_1_lte"
        style="@style/TextUnderImageStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintEnd_toEndOf="@+id/iv_cell_1_lte"
        app:layout_constraintStart_toStartOf="@+id/iv_cell_1_lte"
        app:layout_constraintTop_toBottomOf="@+id/iv_cell_1_lte" />

    <ImageView
        android:id="@+id/iv_cell_2_lte"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_cell_1_lte"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_cell_2_lte"
        style="@style/TextUnderImageStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintEnd_toEndOf="@+id/iv_cell_2_lte"
        app:layout_constraintStart_toStartOf="@+id/iv_cell_2_lte"
        app:layout_constraintTop_toBottomOf="@+id/iv_cell_2_lte" />

    <View
        android:id="@+id/view1"
        android:layout_width="4dp"
        android:layout_height="18dp"
        android:layout_margin="10dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cell_1_nr" />

    <TextView
        android:id="@+id/textView14"
        style="@style/TextLeftStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:text="@string/sync_state"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <TextView
        android:id="@+id/tv_sync_state_1_nr"
        style="@style/TextRightStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="@string/lose_sync"
        app:layout_constraintEnd_toEndOf="@+id/iv_cell_1_nr"
        app:layout_constraintStart_toStartOf="@+id/iv_cell_1_nr"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/tv_sync_state_2_nr"
        style="@style/TextRightStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="@string/lose_sync"
        app:layout_constraintEnd_toEndOf="@+id/iv_cell_2_nr"
        app:layout_constraintStart_toStartOf="@+id/iv_cell_2_nr"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/tv_sync_state_1_lte"
        style="@style/TextRightStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="@string/lose_sync"
        app:layout_constraintEnd_toEndOf="@+id/iv_cell_1_lte"
        app:layout_constraintStart_toStartOf="@+id/iv_cell_1_lte"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/tv_sync_state_2_lte"
        style="@style/TextRightStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="@string/lose_sync"
        app:layout_constraintEnd_toEndOf="@+id/iv_cell_2_lte"
        app:layout_constraintStart_toStartOf="@+id/iv_cell_2_lte"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <View
        android:id="@+id/view31"
        android:layout_width="4dp"
        android:layout_height="18dp"
        android:layout_margin="10dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sync_state_2_lte" />

    <TextView
        android:id="@+id/textView16"
        style="@style/TextLeftStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:text="@string/temp"
        app:layout_constraintBottom_toBottomOf="@+id/view31"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view31" />

    <TextView
        android:id="@+id/tv_sync_temp_nr"
        style="@style/TextRightStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0℃"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <View
        android:id="@+id/view32"
        android:layout_width="4dp"
        android:layout_height="18dp"
        android:layout_margin="10dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView17"
        style="@style/TextLeftStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:text="@string/vol"
        app:layout_constraintBottom_toBottomOf="@+id/view32"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view32" />

    <TextView
        android:id="@+id/tv_vol"
        style="@style/TextRightStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0℃"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <View
        android:id="@+id/view33"
        android:layout_width="4dp"
        android:layout_height="18dp"
        android:layout_margin="10dp"
        android:background="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView18"
        style="@style/TextLeftStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:text="@string/state_time_line"
        app:layout_constraintBottom_toBottomOf="@+id/view33"
        app:layout_constraintStart_toEndOf="@+id/view33"
        app:layout_constraintTop_toTopOf="@+id/view33" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_steps_nr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>