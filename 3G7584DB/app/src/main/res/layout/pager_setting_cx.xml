<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            android:windowEnableSplitTouch="false"
            >

            <LinearLayout
                android:id="@+id/ll_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting_top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/app_version"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/app_version"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp"
                    tools:text="V1.0" />

            </LinearLayout>

            <!--                <ImageView-->
            <!--                    android:id="@+id/view1"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="1dp"-->
            <!--                    android:background="#ffffff"-->
            <!--                    android:paddingHorizontal="10dp"-->
            <!--                    android:src="#ededed"-->
            <!--                    app:layout_constraintTop_toBottomOf="@+id/ll_ip" />-->

            <LinearLayout
                android:id="@+id/btn_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="设备版本"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:drawableEndCompat="@mipmap/more" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_search_arfcn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="查询频点配置"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_arfcn_cfg"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp"
                    app:drawableEndCompat="@mipmap/more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_sync_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="同步模式"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_sync_model"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp"
                    app:drawableEndCompat="@mipmap/more"
                    tools:text="@string/air" />
            </LinearLayout>

            <!--                <ImageView-->
            <!--                    android:id="@+id/view11"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="1dp"-->
            <!--                    android:background="#ffffff"-->
            <!--                    android:paddingHorizontal="10dp"-->
            <!--                    android:src="#ededed"-->
            <!--                    app:layout_constraintTop_toBottomOf="@+id/ll_ip" />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_single_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_period"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="调度周期(ms)"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/sp_period"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_period"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_period" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/btn_add_arfcn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_single_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="添加设备工作频点"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:drawableEndCompat="@mipmap/more" />
            </LinearLayout>

            <!--                <ImageView-->
            <!--                    android:id="@+id/view6"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:visibility="gone"-->
            <!--                    android:layout_height="1dp"-->
            <!--                    android:background="#ffffff"-->
            <!--                    android:paddingHorizontal="10dp"-->
            <!--                    android:src="#ededed"-->
            <!--                    app:layout_constraintTop_toBottomOf="@+id/ll_ip" />-->

            <LinearLayout
                android:id="@+id/btn_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="基带log"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:drawableEndCompat="@mipmap/more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_dev_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="修改设备名称"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:drawableEndCompat="@mipmap/more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_wifi_cfg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="配置wifi名称"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:drawableEndCompat="@mipmap/more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="基带升级"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:drawableEndCompat="@mipmap/more" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_data_transmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_single_setting_corner_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="数据传输"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:drawableEndCompat="@mipmap/more" />
            </LinearLayout>
            <TextView
                android:id="@+id/btn_reboot"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/layout_selector_single_setting_corner_20"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="@string/reboot"
                android:textColor="#FD5C5C"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</layout>
