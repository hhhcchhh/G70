<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:tabRippleColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="#FFFFFF"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabTextAppearance="@style/tabLayout_topStyle"
        app:tabTextColor="#B3FFFFFF"
        />

    <com.simdo.g73cs.View.NestedScrollableHost
        android:id="@+id/nestedScrollableHost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_setting">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.simdo.g73cs.View.NestedScrollableHost>
</androidx.constraintlayout.widget.ConstraintLayout>
